@page
@model WebApplication17.Pages.Admin.Products.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddProductView.Name" class="control-label"></label>
                <input asp-for="AddProductView.Name" class="form-control" />
                <span asp-validation-for="AddProductView.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductView.Description" class="control-label"></label>
                <input asp-for="AddProductView.Description" class="form-control" />
                <span asp-validation-for="AddProductView.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductView.Cost" class="control-label"></label>
                <input asp-for="AddProductView.Cost" class="form-control" />
                <span asp-validation-for="AddProductView.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductView.Skidka" class="control-label"></label>
                <input asp-for="AddProductView.Skidka" class="form-control" />
                <span asp-validation-for="AddProductView.Skidka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductView.ImgUrl" class="control-label"></label>
                <input asp-for="AddProductView.ImgUrl" class="form-control" type="file" />
                <span asp-validation-for="AddProductView.ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddProductView.CategoryId" class="control-label"></label>
                <select asp-for="AddProductView.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
