@page "{Id}"
@model WebApplication17.Pages.Cart.OrderDetailsModel
@{
}
@foreach (var item in Model.Order.OrderProducts)
{
    <div class="card" style="width:1000px; height:300px">
        <div class="row">
            <div class="col-4">
                <img src="~/Image/@item.Product.ImgUrl" height="300px" width="300px" />
            </div>
            <div class="col-8">
                <div class="card-body">
                    <ul class="list-group" style="text-decoration:none">
                        <li class="list-group">
                            <a href="/Admin/Products/Details/@item.Product.Id" style="text-decoration:none">
                                @item.Product.Name @item.Product.Description
                            </a>
                        </li>
                        <li class="list-group" style="text-decoration:none">
                            <a href="#">@item.Product.Cost</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
}